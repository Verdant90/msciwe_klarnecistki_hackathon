<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/layout_stats_header"
        layout="@layout/layout_stats_header"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scroll_view_layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="140dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title_general"
                style="@style/TextViewSeparator"
                android:text="GENERAL"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/image_exp"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_exp"
                app:layout_constraintEnd_toEndOf="@+id/guideline_vertical_25_percent"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_25_percent"
                app:layout_constraintTop_toBottomOf="@+id/title_general" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120"
                android:textColor="@color/black"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="@+id/guideline_vertical_25_percent"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_25_percent"
                app:layout_constraintTop_toBottomOf="@+id/image_exp" />

            <TextView
                android:id="@+id/title_fruits"
                style="@style/TextViewSeparator"
                android:layout_marginTop="200dp"
                android:text="FRUITS"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_general" />

            <TextView
                android:id="@+id/title_challenges"
                style="@style/TextViewSeparator"
                android:text="CHALLENGES"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_fruits" />

            <TextView
                android:id="@+id/title_navigation"
                style="@style/TextViewSeparator"
                android:text="NAVIGATION"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_challenges" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline_vertical_25_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.2" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline_vertical_50_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline_vertical_75_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.8" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>