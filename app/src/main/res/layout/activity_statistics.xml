<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/layout_stats_header"
        layout="@layout/layout_stats_header"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scroll_view_layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="140dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title_general"
                style="@style/TextViewSeparator"
                android:text="GENERAL"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/image_exp"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_exp"
                app:layout_constraintEnd_toEndOf="@+id/guideline_vertical_25_percent"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_25_percent"
                app:layout_constraintTop_toBottomOf="@+id/title_general" />

            <TextView
                android:id="@+id/text_exp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120"
                android:textColor="@color/black"
                android:textSize="22sp"
                app:layout_constraintBottom_toTopOf="@+id/title_fruits"
                app:layout_constraintEnd_toEndOf="@+id/guideline_vertical_25_percent"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_25_percent"
                app:layout_constraintTop_toBottomOf="@+id/image_exp" />

            <ImageView
                android:id="@+id/image_coins"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_coins"
                app:layout_constraintEnd_toEndOf="@+id/guideline_vertical_50_percent"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_50_percent"
                app:layout_constraintTop_toBottomOf="@+id/title_general" />

            <TextView
                android:id="@+id/text_coins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="190"
                android:textColor="@color/black"
                android:textSize="22sp"
                app:layout_constraintBottom_toTopOf="@+id/title_fruits"
                app:layout_constraintEnd_toEndOf="@+id/guideline_vertical_50_percent"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_50_percent"
                app:layout_constraintTop_toBottomOf="@+id/image_coins" />

            <ImageView
                android:id="@+id/image_coins_total"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_coins_total"
                app:layout_constraintEnd_toEndOf="@+id/guideline_vertical_75_percent"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_75_percent"
                app:layout_constraintTop_toBottomOf="@+id/title_general" />

            <TextView
                android:id="@+id/text_coins_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="370"
                android:textColor="@color/black"
                android:textSize="22sp"
                app:layout_constraintBottom_toTopOf="@+id/title_fruits"
                app:layout_constraintEnd_toEndOf="@+id/guideline_vertical_75_percent"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_75_percent"
                app:layout_constraintTop_toBottomOf="@+id/image_coins_total" />


            <TextView
                android:id="@+id/title_fruits"
                style="@style/TextViewSeparator"
                android:layout_marginTop="130dp"
                android:text="FRUITS"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_general" />

            <ImageView
                android:id="@+id/image_apples"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_apple"
                app:layout_constraintBottom_toTopOf="@+id/text_apples"
                app:layout_constraintEnd_toEndOf="@+id/guideline_vertical_25_percent"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_25_percent"
                app:layout_constraintTop_toBottomOf="@+id/title_fruits" />

            <TextView
                android:id="@+id/text_apples"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120"
                android:textColor="@color/black"
                android:textSize="22sp"
                app:layout_constraintBottom_toTopOf="@+id/title_challenges"
                app:layout_constraintEnd_toEndOf="@+id/guideline_vertical_25_percent"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_25_percent"
                app:layout_constraintTop_toBottomOf="@+id/image_apples" />

            <ImageView
                android:id="@+id/image_pears"
                android:layout_width="25dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_pear"
                app:layout_constraintBottom_toTopOf="@+id/text_pears"
                app:layout_constraintEnd_toEndOf="@+id/guideline_vertical_50_percent"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_50_percent"
                app:layout_constraintTop_toBottomOf="@+id/title_fruits" />

            <TextView
                android:id="@+id/text_pears"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="190"
                android:textColor="@color/black"
                android:textSize="22sp"
                app:layout_constraintBottom_toTopOf="@+id/title_challenges"
                app:layout_constraintEnd_toEndOf="@+id/guideline_vertical_50_percent"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_50_percent"
                app:layout_constraintTop_toBottomOf="@+id/image_pears" />

            <ImageView
                android:id="@+id/image_plums"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_plum"
                app:layout_constraintBottom_toTopOf="@+id/text_plums"
                app:layout_constraintEnd_toEndOf="@+id/guideline_vertical_75_percent"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_75_percent"
                app:layout_constraintTop_toBottomOf="@+id/title_fruits" />

            <TextView
                android:id="@+id/text_plums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="22sp"
                app:layout_constraintBottom_toTopOf="@+id/title_challenges"
                app:layout_constraintEnd_toEndOf="@+id/guideline_vertical_75_percent"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_75_percent"
                app:layout_constraintTop_toBottomOf="@+id/image_plums" />

            <TextView
                android:id="@+id/title_challenges"
                style="@style/TextViewSeparator"
                android:layout_marginTop="120dp"
                android:text="CHALLENGES"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_fruits" />

            <ImageView
                android:id="@+id/image_apple_challenges"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_apple_challenge"
                app:layout_constraintBottom_toTopOf="@+id/text_apple_challenges"
                app:layout_constraintEnd_toEndOf="@+id/guideline_vertical_25_percent"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_25_percent"
                app:layout_constraintTop_toBottomOf="@+id/title_challenges" />

            <TextView
                android:id="@+id/text_apple_challenges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="22sp"
                app:layout_constraintBottom_toTopOf="@+id/guideline_horizontal_challenges"
                app:layout_constraintEnd_toEndOf="@+id/guideline_vertical_25_percent"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_25_percent"
                app:layout_constraintTop_toBottomOf="@+id/image_apple_challenges" />

            <ImageView
                android:id="@+id/image_pear_challenges"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_pear_challenge"
                app:layout_constraintBottom_toTopOf="@+id/text_pear_challenges"
                app:layout_constraintEnd_toEndOf="@+id/guideline_vertical_50_percent"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_50_percent"
                app:layout_constraintTop_toBottomOf="@+id/title_challenges" />

            <TextView
                android:id="@+id/text_pear_challenges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="22sp"
                app:layout_constraintBottom_toTopOf="@id/guideline_horizontal_challenges"
                app:layout_constraintEnd_toEndOf="@+id/guideline_vertical_50_percent"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_50_percent"
                app:layout_constraintTop_toBottomOf="@+id/image_pear_challenges" />

            <ImageView
                android:id="@+id/image_plum_challenges"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_plum_challenge"
                app:layout_constraintBottom_toTopOf="@+id/text_plum_challenges"
                app:layout_constraintEnd_toEndOf="@+id/guideline_vertical_75_percent"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_75_percent"
                app:layout_constraintTop_toBottomOf="@+id/title_challenges" />

            <TextView
                android:id="@+id/text_plum_challenges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="370"
                android:textColor="@color/black"
                android:textSize="22sp"
                app:layout_constraintBottom_toTopOf="@+id/guideline_horizontal_challenges"
                app:layout_constraintEnd_toEndOf="@+id/guideline_vertical_75_percent"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_75_percent"
                app:layout_constraintTop_toBottomOf="@+id/image_plum_challenges" />


            <android.support.constraint.Guideline
                android:id="@+id/guideline_horizontal_challenges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.7"/>

            <ImageView
                android:id="@+id/image_fruit_challenges"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_fruit_challenge"
                app:layout_constraintBottom_toTopOf="@+id/text_fruit_challenges"
                app:layout_constraintEnd_toEndOf="@+id/guideline_vertical_50_percent"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_50_percent"
                app:layout_constraintTop_toBottomOf="@+id/guideline_horizontal_challenges" />

            <TextView
                android:id="@+id/text_fruit_challenges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textColor="@color/black"
                android:textSize="22sp"
                app:layout_constraintBottom_toTopOf="@+id/title_navigation"
                app:layout_constraintEnd_toEndOf="@+id/guideline_vertical_50_percent"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_50_percent"
                app:layout_constraintTop_toBottomOf="@+id/image_fruit_challenges" />

            <TextView
                android:id="@+id/title_navigation"
                style="@style/TextViewSeparator"
                android:layout_marginTop="240dp"
                android:layout_marginBottom="120dp"
                android:text="NAVIGATION"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_challenges" />

            <ImageView
                android:id="@+id/image_total_distance"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_footprints"
                app:layout_constraintBottom_toTopOf="@+id/text_total_distance"
                app:layout_constraintEnd_toEndOf="@+id/guideline_vertical_30_percent"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_30_percent"
                app:layout_constraintTop_toBottomOf="@+id/title_navigation" />

            <TextView
                android:id="@+id/text_total_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 km"
                android:textColor="@color/black"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/guideline_vertical_30_percent"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_30_percent"
                app:layout_constraintTop_toBottomOf="@+id/image_total_distance" />

            <ImageView
                android:id="@+id/image_total_area"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_area"
                app:layout_constraintBottom_toTopOf="@+id/text_total_area"
                app:layout_constraintEnd_toEndOf="@+id/guideline_vertical_60_percent"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_60_percent"
                app:layout_constraintTop_toBottomOf="@+id/title_navigation" />

            <TextView
                android:id="@+id/text_total_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="75 km²"
                android:textColor="@color/black"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/guideline_vertical_60_percent"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_60_percent"
                app:layout_constraintTop_toBottomOf="@+id/image_total_area" />

            <View
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_marginTop="120dp"
                app:layout_constraintTop_toBottomOf="@id/title_navigation"/>


            <android.support.constraint.Guideline
                android:id="@+id/guideline_vertical_25_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.2" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline_vertical_30_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.3" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline_vertical_60_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.67" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline_vertical_50_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline_vertical_75_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.8" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>